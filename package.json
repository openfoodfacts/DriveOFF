{
  "name": "driveoff",
  "version": "0.5.0.0",
  "license": "GPL-2.0",
  "repository": "git@github.com:openfoodfacts/DriveOFF.git",
  "author": "Clovis Gauzy <github.788acf@clovisgauzy.fr>",
  "bugs": {
    "url": "https://github.com/openfoodfacts/DriveOFF/issues"
  },
  "private": true,
  "devDependencies": {
    "standard": "^16.0.3",
    "web-ext": "^8.6.0"
  },
  "scripts": {
    "start": "web-ext run --target=firefox-desktop --target=chromium --verbose",
    "start:firefox": "web-ext run --verbose",
    "start:chromium": "web-ext run --target=chromium --verbose",
    "build": "web-ext build"
  },
  "webExt": {
    "sourceDir": "./src/",
    "build": {
      "overwriteDest": true
    },
    "artifactsDir": "./builds"
  },
  "standard": {
    "globals": [ 
      "chrome",
      "DOFFNode",
      "Drive",
      "drivesList",
      "fetch",
      "Headers",
      "MutationObserver",
      "ProductList",
      "ProductItem",
      "slug"
    ],
    "ignore": [
      "/src/js/external"
    ]
  }
}
