{
  "manifest_version": 2,
  "name": "DriveOFF",
  "version": "0.5.0.0",
  "icons": {
    "16": "/img/icons/Drive_Off_1616.png",
    "48": "/img/icons/Drive_Off_4848.png",
    "128": "/img/icons/Drive_Off_128128.png"
  },
  "description": "Add Open Food Facts information when ordering online.",
  "permissions": [
    "*://*.openfoodfacts.org/*"
  ],
  "content_scripts": [
    {
      "matches": [ "https://*/*" ],
      "css": [
        "/css/content.css"
      ],
      "run_at": "document_idle",
      "js": [
        "/external/slug.js",
        "/lib/DOFFNode.js",
        "/lib/ProductItem.js",
        "/lib/ProductList.js",
        "/lib/Drive.js",
        "/drives/Auchan.js",
        "/drives/Biocoop.js",
        "/drives/Carrefour.js",
        "/drives/Houra.js",
        "/drives/Intermarche.js",
        "/drives/Metro.js",
        "/drives/UDrive.js",
        "/scripts/content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "/img/*"
  ]
}
